<h1>案件詳細</h1>

<table class="table table-bordered">
  <td>クライアント名：<%= @client.client_name %></td>
  <td>クライアントメモ：<%= @client.client_content %></td>
</table>

<h2>案件一覧 
  <button class="btn btn-default">
    <%= link_to '案件新規作成', new_client_task_path(@client) %>
  </button>
</h2>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
  　<tr>
      <th>案件名</th>
      <th>作業日</th>
      <th>請求年</th>
      <th>請求月</th>
      <th>案件請求金額</th>
      <th>案件メモ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @client.tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.task_day %></td>
        <td><%= task.task_payment_year %></td>
        <td><%= task.task_payment_month %></td>
        <td><%= task.task_payment %>円</td>
        <td><%= task.task_content %></td>
        <td>
        <button class="btn btn-default">
          <%= link_to "編集", edit_client_task_path(@client,task.id), data: { confirm: '本当に編集していいですか？' } %>
        </button>
        </td>
        <td>
        <button class="btn btn-default">
          <%= link_to '削除', client_task_path(@client,task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
        </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>2018年：月別請求額</h2>
<table class="table table-striped table-bordered table-hover table-condensed">
  <td>1月</td><td><%= @payment01 %>円</td><tr>
  <td>2月</td><td><%= @payment02 %>円</td><tr>
  <td>3月</td><td><%= @payment03 %>円</td><tr>
  <td>4月</td><td><%= @payment04 %>円</td><tr>
  <td>5月</td><td><%= @payment05 %>円</td><tr>
  <td>6月</td><td><%= @payment06 %>円</td><tr>
  <td>7月</td><td><%= @payment07 %>円</td><tr>
  <td>8月</td><td><%= @payment08 %>円</td><tr>
  <td>9月</td><td><%= @payment09 %>円</td><tr>
  <td>10月</td><td><%= @payment10 %>円</td><tr>
  <td>11月</td><td><%= @payment11 %>円</td><tr>
  <td>12月</td><td><%= @payment12 %>円</td><tr>
</table>