
<h1>案件一覧/作成画面</h1>

<table class="table table-bordered">
  <td>クライアント名：<%= @client.client_name %></td>
  <td>クライアントメモ：<%= @client.client_content %></td>
</table>

<h2>案件一覧 
  <button class="btn btn-default">
    <%= link_to '案件新規作成', new_task_path(@client.id) %>
  </button>
</h2>

    <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
     <tr>
      <th>案件名</th>
      <th>作業日</th>
      <th>請求年</th>
      <th>請求月</th>
      <th>案件請求金額</th>
      <th>案件メモ</th>
      <th colspan="3"></th>
    </tr>
    </thead>

  　<tbody>
<% @client.tasks.each do |task| %>

  <tr>
    <td><%= task.task_name %></td>
    <td><%= task.task_day %></td>
    <td><%= task.task_payment_year %></td>
    <td><%= task.task_payment_month %></td>
    <td><%= task.task_payment %></td>
    <td><%= task.task_content %></td>
    
    <td><button class="btn btn-default">
      <%= link_to "編集", edit_task_path(task.id), data: { confirm: '本当に編集していいですか？' } %>
    </button></td>
    
    <td><button class="btn btn-default">
      <%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
    </button></td>

  </tr>
<% end %>
  </tbody>
</table>

<h2>案件月別請求額</h2>

<% @client.tasks.each do |task| %>
<p><%= @total %></p>

<% end %>