<!DOCTYPE html>
<html>
  <head>
    <title>ClientAppli02</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
          <% if logged_in? %>
          <button type="button" class="btn btn-info btn-sm">
             <%= link_to "ログアウト", session_path(current_user.id), method: :delete %></button>

          <% else %>
          <button type="button" class="btn btn-info btn-sm">
             <%= link_to "ログイン", new_session_path %></button>
          <button type="button" class="btn btn-info btn-sm">
             <%= link_to "新規ユーザー登録", new_user_path %></button>
          <% end %>
          <button type="button" class="btn btn-warning btn-sm">
            <%= link_to "クライアント一覧", clients_path %></button>
  </header>
  
  <h2><%= notice %></h2>
    <%= yield %>
  </body>
</html>
